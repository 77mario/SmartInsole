uint16_t y = adc_buffer[4];
uint16_t z = adc_buffer[5];

sprintf(msg1, "F1: %d F2:%d F3:%d x: %d y: z:%d \r\n", flexi_1,flexi_2,flexi_3,x,y,z);
HAL_UART_Transmit(huart2, (uint8_t*)msg1, strlen(msg1), HAL_MAX_DELAY);

